/* pages/mine/mine-goods.wxss */

page{
  width: 100%;
  height: 100%;
}
.mine-goods-container{
  width: 100%;
  height: 100%;
  background-color: #f9f9f9;
  position: relative;
}
.mine-goods-list{
  width: 100%;
  height: 200rpx;
  position: relative;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 1px;
}
.mgl-one{
  width: 500rpx;
  height: 40rpx;
  display: flex;
  font-size: 24rpx;
  justify-content: space-between;
  align-items: center;
}

.mglo-one{
  width: 70rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #16bf76;
  color: #fff;
  border-radius: 5px;
}
.mglo-one2{
  width: 70rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #ccc;
  border: 1px solid #ccc;
  border-radius: 5px;
}
.mgl-two{
  width: 500rpx;
  height: 72rpx;
  margin-top: 15rpx;
  overflow: auto;
  font-size: 26rpx;
}
.mgl-three{
  width: 170rpx;
  height: 200rpx;
  position: absolute;
  top: 0;
  right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.mgl-three image{
  width: 50rpx;
  height: 50rpx;
}

.mine-goods-btn{
  width: 100%;
  height: 100rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.mine-goods-btn image{
  width: 40rpx;
  height: 40rpx;
}