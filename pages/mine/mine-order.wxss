/* pages/mine/mine-order.wxss */


page{
  width: 100%;
  height: 100%;
}
.mine-coupon-container{
  width: 100%;
  height: 100%;
}
.mine-coupon-tab{
  width: 100%;
  height: 100rpx;
  display: flex;
}
.mct-con{
  width: 25%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
}
.mct-con-show{
  width: 100%;
  height: calc(100% - 110rpx);
  overflow: auto;
  background-color: #f9f9f9;
}

.mcs-list{
  width: 100%;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.mscl-list{
  padding-top: 30rpx;

}
.mscl-con{
  width: 100%;
  height: 180rpx;
  display: flex;
  margin-bottom: 30rpx;
  position: relative;
}
.mscl-abcon{
  width: 180rpx;
  height: 180rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.msclab-one{
  width: 100%;
  height: 65rpx;
  line-height: 65rpx;
  font-size: 30rpx;
  text-align: right;
  color: #16bf76;
}
.msclab-two{
  width: 100%;
  height: 65rpx;
  line-height: 65rpx;
  font-size: 30rpx;
  text-align: right;
}
.mscl-con image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 5px;
}
.msclc-two{
  width: 300rpx;
  height: 180rpx;
  margin-left: 30rpx;
}
.msclct-one{
  width: 100%;
  height: 65rpx;
  line-height: 65rpx;
  font-size: 30rpx;
}
.msclct-two{
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  background-color: #f7f7f7;
  border-radius: 5px;
  text-align: center;
  color: #666;
}
.msclct-three{
  width: 100%;
  height: 55rpx;
  line-height: 55rpx;
  font-size: 30rpx;
}
.mscl-bottom{
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #f7f7f7;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.msclb-left{
  display: flex;
  align-items: center;
}
.msclb-right{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.msclbrc{
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #16bf76;
  border-radius: 5px;
  color: #16bf76;
  font-size: 30rpx;
  text-align: center;
  margin-left: 30rpx;
}
.msclbrc2{
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #999999;
  border-radius: 5px;
  color: #999999;
  font-size: 30rpx;
  text-align: center;
}